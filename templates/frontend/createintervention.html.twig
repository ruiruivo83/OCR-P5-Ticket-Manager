{% extends "_layout.html.twig" %}

{% block topbar %}
    {{ include('/backend/user_topbar.html.twig') }}
{% endblock %}

{% block body %}
    <!-- Project Card Example -->
    <div class="card m-1">
        <div class="card-header py-3">
            <i class="fas fa-check fa-2x mr-3"></i>CREATE INTERVENTION
        </div>
        <form action="index.php?action=createinterventionfunction" method="post" class="form-example">
            <table class="table">
                <tbody>
                <tr>
                    <th class="w-25"> TICKET ID:{{ ticketid }}</th>
                    <td><input class="w-100" type="text" name="ticketid" id="ticketid" value="{{ ticketid }}" hidden>
                    </td>
                </tr>
                <tr>
                    <th class="w-25"><label>INTERVENTION DESCRIPTION: </label></th>
                    <td>
                        <div class="input_text"><textarea style="height:250px;" class="w-100 p-1 " id="textarea_id"
                                                          name="Description"></textarea></div>
                    </td>
                </tr>
                </tbody>
            </table>
            <div class="form-example text-right">
                <input type="submit" class="btn btn-primary m-3" value="Create Intervention">
            </div>
        </form>

    </div>
{% endblock %}