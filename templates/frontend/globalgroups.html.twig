{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html.twig') }}
{% endblock %}

{% block body %}
    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                <i class="fas fa-users mr-3 fa-2x"></i>GLOBAL GROUPS
            </div>
        </div>
        <div class="card-body p-0">

            <table id="dtBasicExample" class="table table-striped table-bordered table-sm m-0" cellspacing="0"
                   width="100%">

                <thead>
                <tr>
                    <th class="th-sm">Group Id
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">Group Description
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm align-items-end">
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for result in results %}
                    <tr>
                        <td class="table_text_overflow_ellipsis"><i class="fas fa-users mr-3"></i> {{ result.id }}
                        </td>
                        <td class="table_text_overflow_ellipsis">  {{ result.group_name }} </td>
                        <td class="table_text_overflow_ellipsis">  {{ result.group_description }} </td>
                        <td class="table_text_overflow_ellipsis">  {{ result.creation_date }} </td>
                        <td class="table_text_overflow_ellipsis">
                            <a class="mr-2" href="index.php?action=groupdetails&id={{ result.id }}">Details</a>
                            <a class="mr-2" href="index.php?action=groupmembers&groupid={{ result.id }}">Members</a>
                            <a class="mr-2" href="index.php?action=closegroup&groupid={{ result.id }}">Close</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">Group Id
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">Group Description
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </tfoot>
            </table>

        </div>
    </div>
{% endblock %}