{% extends "_layout.html.twig" %}

{% block topbar %}
    {{ include('/backend/user_topbar.html.twig') }}
{% endblock %}

{% block body %}
    <div class="card m-1 shadow mb-4">
        <div class="card-header py-3">
            CREATE TICKET
        </div>
        <form action="index.php?action=createticketfunction&groupid={{ groupid }}" method="post" class="form-example">
            <table class="table">
                <tbody>
                <tr>
                    <th class="w-25"> GROUP:</th>
                    <td>
                        {{ groupid }} - {{ groupname }}
                    </td>
                </tr>
                <tr>
                    <th class="w-25"> TICKET REQUESTER:</th>
                    <td><input class="w-100" type="text" name="Requester" id="Requester" required></td>
                </tr>
                <tr>
                    <th class="w-25"> TICKET TITLE:</th>
                    <td><input class="w-100" type="text" name="Title" id="Title" required></td>
                </tr>
                <tr>
                    <th class="w-25"><label>TICKET DESCRIPTION: </label></th>
                    <td>
                        <div class="input_text"><textarea style="height:250px;" class="w-100 p-1 " id="textarea_id"
                                                          name="Description"></textarea></div>
                    </td>
                </tr>

                </tbody>
            </table>
            <div class="form-example text-right">
                <input type="submit" class="btn btn-sm btn-primary m-3" value="Create Ticket">
            </div>
        </form>
    </div>
{% endblock %}