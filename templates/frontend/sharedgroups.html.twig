{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html.twig') }}
{% endblock %}

{% block body %}
    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                <i class="fas fa-users mr-3 fa-2x"></i>SHARED GROUPS
            </div>

        </div>
        <div class="card-body p-0">

            <table id="dtBasicExample" class="table table-striped table-bordered table-sm m-0 " cellspacing="0"
                   width="100%">

                <thead>
                <tr>
                    <th class="th-sm">Admin
                    </th>
                    <th class="th-sm">Group Id
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">Group Description
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm align-items-end">
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for group in sharedgroups %}
                    <tr>
                        <td class="table_text_overflow_ellipsis"><img style="width: 25px; height: 25px;" class="img-profile rounded-circle avatar"
                                                                      style=" width: 30px; height: 30px;"
                                                                      src="upload_files/{{ group.photo_filename }}"
                                                                      alt=""/> {{ group.group_admin_id }}
                            - {{ group.email }}
                        </td>
                        <td class="table_text_overflow_ellipsis"><span
                                    class="badge badge-info">   {{ group.group_id }}  </span>
                        </td>
                        <td class="table_text_overflow_ellipsis">  {{ group.group_name }} </td>
                        <td class="table_text_overflow_ellipsis">  {{ group.group_description }} </td>
                        <td class="table_text_overflow_ellipsis">  {{ group.creation_date }} </td>
                        <td class="table_text_overflow_ellipsis">
                            <a class="mr-2" href="index.php?action=groupdetails&id={{ group.group_id }}">Details</a>
                            <a class="mr-2"
                               href="index.php?action=groupmembers&groupid={{ group.group_id }}">Members</a>
                            <a class="mr-2" href="index.php?action=closegroup&groupid={{ group.group_id }}">Close</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">Admin
                    </th>
                    <th class="th-sm">Group Id
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">Group Description
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm align-items-end">
                    </th>
                </tr>
                </tfoot>
            </table>


        </div>
    </div>
{% endblock %}