{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html.twig') }}
{% endblock %}

{% block body %}




    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                <i class="fas fa-hands-helping mr-3 fa-2x"></i>INVITATIONS SENT
            </div>

        </div>
        <div class="card-body p-0">


            <table class="table table-striped table-bordered table-sm m-0 " cellspacing="0"
                   width="100%">
                <thead>
                <tr>
                    <th class="th-sm">To
                    </th>
                    <th class="th-sm">Date
                    </th>
                    <th class="th-sm">Group ID
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for invitation in invitationsFromMe %}
                    <tr>
                        <td class="table_text_overflow_ellipsis"> {{ invitation.invitation_to_user_id }} </td>
                        <td class="table_text_overflow_ellipsis">  {{ invitation.invitation_date }} </td>
                        <td class="table_text_overflow_ellipsis">  {{ invitation.invitation_for_group_id }} </td>
                        <td class="table_text_overflow_ellipsis"> {{ invitation.group_name }} </td>
                        <td class="table_text_overflow_ellipsis">
                            <a href="index.php?action=deleteinvitationfunction&invitationid={{ invitation.id }}">DELETE</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">To
                    </th>
                    <th class="th-sm">Date
                    </th>
                    <th class="th-sm">Group ID
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </tfoot>
            </table>

        </div>
    </div>


    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                <i class="fas fa-hands-helping mr-3 fa-2x"></i>INVITATIONS RECEIVED
            </div>

        </div>
        <div class="card-body p-0">


            <table class="table table-striped table-bordered table-sm m-0 " cellspacing="0"
                   width="100%">
                <thead>
                <tr>
                    <th class="th-sm">From
                    </th>
                    <th class="th-sm">Date
                    </th>
                    <th class="th-sm">Group ID
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for invitation in invitationsForMe %}
                    <tr>
                        <td>  {{ invitation.invitation_from_user_id }} </td>
                        <td>  {{ invitation.invitation_date }} </td>
                        <td>  {{ invitation.invitation_for_group_id }} </td>
                        <td>  {{ invitation.group_name }} </td>
                        <td>
                            <a href="index.php?action=acceptinvitationfunction&invitationid={{ invitation.id }}&groupid={{ invitation.invitation_for_group_id }}&userid={{ invitation.invitation_to_user_id }}">ACCEPT</a>
                            <a href="index.php?action=deleteinvitationfunction&invitationid={{ invitation.id }}">DELETE</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">From
                    </th>
                    <th class="th-sm">Date
                    </th>
                    <th class="th-sm">Group ID
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </tfoot>
            </table>

        </div>
    </div>


{% endblock %}